{% extends "base.njk" %}

{# Define specific title for the home page #}
{% set title = "My Awesome Blog - Home" %}

{% block content %}

    <h1>Blog Posts</h1>

    {# Check if the 'post' collection exists and has items #}
    {% if collections.post and collections.post.length > 0 %}
        <ul>
            {# Loop through posts (Eleventy sorts by date descending by default if dates are present) #}
            {% for post in collections.post %}
                <li>
                    <h2><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>

                    {# Optionally display summary #}
                    {% if post.data.summary %}
                       <div class="post-summary">
                           {{ post.data.summary | safe }}
                       </div>
                    {% endif %}

                    {# We will add date display here later #}

                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No blog posts found yet!</p>
    {% endif %}

{% endblock %}